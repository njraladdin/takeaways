{
  "manifest_version": 3,
  "name": "Takeaways - AI Notes & Quiz for YouTube podcasts and videos",
  "version": "1.0.1",
  "description": "Generate notes and quizzes while watching YouTube videos. For educational content, podcasts, and interviews - powered by Gemini AI.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "YouTube Takeaways",
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["icons/*", "css/content.css", "html/takeaways.html"],
    "matches": ["https://*.youtube.com/*"]
  }]
}